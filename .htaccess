RewriteEngine On
# Módosítva a te elérési utadra:
RewriteBase /vizsgaremek/

# 1. Ha valaki .php kiterjesztéssel hívná meg (pl. dashboard.php), eldobjuk a kiterjesztést (301 redirect)
# Kivéve, ha belső átirányítás történik (ez akadályozza meg a hurkot)
RewriteCond %{ENV:REDIRECT_STATUS} ^$
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.php$
RewriteRule ^(.*)\.php$ $1 [R=301,L]

# 2. Egyedi magyar nevek (Alias-ok)
RewriteRule ^kezdolap$ dashboard.php [L,QSA]
RewriteRule ^premium$ premium.php [L,QSA]
RewriteRule ^admin-panel$ admin.php [L,QSA]
RewriteRule ^BMI$ bmi.php [L,QSA]
RewriteRule ^premium-lemondas$ cancel_premium.php [L,QSA]
RewriteRule ^fizetes$ checkout.php [L,QSA]
RewriteRule ^segitseg-GYIK$ help.php [L,QSA]
RewriteRule ^bejelentkezes$ login.php [L,QSA]
RewriteRule ^kijelentkezes$ logout.php [L,QSA]
RewriteRule ^receptjeim$ my_recipes.php [L,QSA]
RewriteRule ^fiokom$ profile.php [L,QSA]
RewriteRule ^support$ support.php [L,QSA]
RewriteRule ^regisztracio$ register.php [L,QSA]
RewriteRule ^rolunk$ about.php [L,QSA]
RewriteRule ^etkezeseim$ log.php [L,QSA]

# 3. Általános szabály a kiterjesztés nélküli eléréshez
# Ha beírják: 'valami', és létezik 'valami.php', akkor azt szolgálja ki
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
# Kibővített szabály, hogy az alútvonalakat (REST) is jobban kezelje
RewriteRule ^(.+)$ $1.php [L,QSA]